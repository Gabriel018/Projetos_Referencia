<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Personal_Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Personal_Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-dark bg-dark">
                               <!-- Imagem e texto -->
                <nav class="navbar navbar-light bg-light">
                  <a class="navbar-brand" href="#">
                    <img src="C:\Users\Duke\Desktop\Personal_Style_Web\Personal_Web\Personal_Web\wwwroot\estilo.png" width="30" height="30" class="d-inline-block align-top" alt="">
                    Persona Style
                  </a>
                </nav>
               <a class="navbar-brand"  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
               <a class="navbar-brand"  asp-area="" asp-controller="QuemSomos" asp-action="Index">Quem Somos</a>
               <a class="navbar-brand"  asp-area="" asp-controller="Servicos" asp-action="Index">Serviços</a>
               <a class="navbar-brand"  asp-area="" asp-controller="Estilo" asp-action="Index">Estilos</a>
                <a class="navbar-brand"  asp-area="" asp-controller="Login" asp-action="Index">Login</a>

        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Personal_Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



