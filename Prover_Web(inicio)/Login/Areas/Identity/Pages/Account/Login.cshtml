@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
         
            <section>
                <form id="account" method="post">
                    <h2 class="navbar-brand">Digite seus dados para Login</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="diego@example.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Input.Password" class="form-label">Senha</label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="senha" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Lembrar-me
                        </label>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn btn-dark">Login</button>
                    </div>
                    <div class="link_txt link_txt mt-4">

                        <ul><a id="forgot-password" style="color:black;font-size:16px;" asp-page="./ForgotPassword">Esqueceu sua senha?</a></ul>

                        <ul> <a asp-page="./Register" style="color:black;font-size:16px;" asp-route-returnUrl="@Model.ReturnUrl">Novo Usuario</a> </ul>

                        <ul	<a id="resend-confirmation" style="color:black;font-size:16px;" asp-page="./ResendEmailConfirmation">Enviar  email de confirmaçao</a> </ul>


                    </div>
                </form>
            </section>
        </div>

