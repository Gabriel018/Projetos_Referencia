@model IEnumerable<Prover_Web.Models.Cliente>

@{
	ViewData["Title"] = "Index";
}

<h1>Total Clientes</h1>

<form asp-controller="Relatorios" asp-action="PesquisarPorCliente">
	<input type="text" name="nome" placeholder="Digite seu nome ">
	<input class="btn btn-dark" type="submit" value="Pesquisar">
</form>
<br>


<a  class="btn btn-secondary" asp-action="Create">Adicionar</a> 
<table class="table table-dark table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cpf)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefone)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descricao)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Categoria)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Rendimento)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cpf)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefone)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descricao)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Categoria)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Rendimento)
				</td>
				<td>
						<a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
						<a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
						<a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
				</td>
			</tr>
		}
	</tbody>
</table>
