@model Prover_Web.Models.Vendedor

@{
    ViewData["Title"] = "Create";
}



<hr />
<div class="container py-5 h-100">
<div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <h4>Novo Cadastro Vendedor</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control mt-3" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label">Digite o CPF</label>
                    <input asp-for="Cpf" id="Cpf" class="form-control mt-3" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label">Digite o Telefone</label>
                    <input asp-for="Telefone" id="Telefone" class="form-control mt-3" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label">Escreve um pouco sobre voce</label>
                    <textarea asp-for="Descricao" class="form-control mt-3"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

             <div class="form-group">
                    <label asp-for="Categoria" class="control-label">Escolha uma Categoria</label>
                    <select asp-for="Categoria" class="form-select">
                        <option value=""></option>
                        <option value="Casual">Casual</option>
                        <option value="Classico">Classico</option>
                        <option value="Esportivo">Esportivo</option>
                        <option value="Excentrico">Excentrico</option>
                    </select>
                    <span asp-validation-for="Categoria" class="text-danger"></span>
                </div>


            
            <div class="form-group">
                    <input type="submit" value="Enviar" class="btn btn-dark mt-3" />
            </div>
        </form>
    </div>
</div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.13/jquery.mask.min.js"></script> 

<script>


$(document).ready(function ($) {
    $('#Cpf').mask('000.000.000-00');
    $('#Telefone').mask('(00) 00000-0000');
    $('#Rendimento').mask('000.000.000.000.000,00', {reverse: true});
});

</script>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
